@model List<MVCBasicsAssignment1.Models.Person>
@{
    ViewData["Title"] = "Person";
}

<h1>People</h1>
<div class="align-content-end"> <input type="button" onclick="location.href='@Url.Action("Create", "Person")'" class="btn btn-secondary align-content-end" value="Create new person"></div>
<form name="personForm" asp-action="Filter" method="post" autocomplete="off">


    <table class="table table-hover">
        <thead class="table-primary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Name)
                </th>
                <th>
                    City
                </th>
                <th>
                    Phonenumber
                </th>
                <th></th>
            </tr>
            <tr>
                <td>
                    @Html.TextBox("Name", null, new { @class = "form-control form-control-sm" })

                </td>
                <td>
                    @Html.TextBox("City", "", new { @class = "form-control form-control-sm" })
                </td>
                <td>
                    @Html.TextBox("Phonenumber", String.Empty, new { @class = "form-control form-control-sm" })

                </td>
                <td>
                    <input type="submit" value="Filter" id="btnSubmit" class="btn btn-secondary btn-sm" />
                    <input type="button" onclick="location.href='@Url.Action("Index", "Person")'" class="btn btn-info btn-sm" value="Reset">
                </td>
            </tr>
        </thead>
        <tbody>



            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phonenumber)
                    </td>
                    <td>
                        <div>
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
@if (ViewBag.DeleteMsg != null)
{
    string mess = ViewBag.DeleteMsg;
    bool success = mess.ToLower().Contains("success");
    string resultTextStyle = "text-danger";

    if (success) resultTextStyle = "text-secondary";
    <div class="h4 @resultTextStyle">
        @ViewBag.DeleteMsg
    </div>
}
