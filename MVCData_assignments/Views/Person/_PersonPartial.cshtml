@model MVCData_assignments.Models.Person

<div class="card text-white bg-info mb-3" style="min-width: 15rem;">
    <div class="card-header">Person info.</div>
    <div class="card-body">
        <h4 class="card-title">
            @Html.DisplayFor(model => model.Name)
        </h4>
        @*<p class="card-text ">*@
        <table class="card-text table-info">
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.City):&nbsp;
                </td>
                <td>
                    @Html.DisplayFor(model => model.City)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Phonenumber):&nbsp;
                </td>
                <td>
                    @Html.DisplayFor(model => model.Phonenumber)
                </td>
            </tr>
        </table>
        @*</p>*@
        <div>
            <span class="glyphicon glyphicon-remove"></span>
            @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger btn-sm " })
        </div>

    </div>
</div>
